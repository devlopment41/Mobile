<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:theme="?attr/actionBarTheme"
                android:layout_height="150dp"
                android:id="@+id/toolbar"/>
        <TextView
                android:text="Locating Services"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:background="#5C1349"
                android:textColor="#EBF2F3"/>
        <TextView
                android:text="אביטן שלי"
                android:textSize="20dp"
                android:background="@drawable/back"
                android:textStyle="bold"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="150dp"
                android:id="@+id/textView16"
                android:textColor="#E3F1F3"/>

    </RelativeLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">
        <Button
                android:text="Clinics"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button11"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="Thera"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button1"
                android:layout_marginLeft="30dp"/>
        <Button
                android:text="Docto"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/Doctors"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp">
        <Button
                android:text="social workers"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:id="@+id/button12"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="Dietitians"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:id="@+id/Dietitians"
                android:layout_marginLeft="30dp"/>
        <Button
                android:text="hospitals"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:id="@+id/hospitals"
                android:layout_marginLeft="30dp"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp">
        <Button
                android:text="Nurses"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:id="@+id/Nurses"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="Institutes"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/Institutes"
                android:layout_marginLeft="30dp"/>
        <Button
                android:text="Laboratories"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/Laboratories"
                android:layout_marginLeft="30dp"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp">
        <Button
                android:text="Supplemental POS"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:id="@+id/SupplementalPOS"
                android:layout_marginLeft="20dp"/>
        <Button
                android:text="Emergency Medicine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:id="@+id/EmergencyMedicine"/>
        <Button
                android:text="Pharmacies"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:id="@+id/Pharmacies"/>

    </LinearLayout>
</LinearLayout>