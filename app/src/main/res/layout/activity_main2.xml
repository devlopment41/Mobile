<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#E8BCF5">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:theme="?attr/actionBarTheme"
                android:layout_height="130dp"
                android:id="@+id/toolbar"/>

        <TextView
                android:text="My Application"
                android:textSize="43dp"
                android:textStyle="bold"
                android:paddingRight="55dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingTop="20dp"
                android:paddingLeft="5dp"
                android:gravity="left"
                android:background="#5C1349"
                android:textColor="#EBF2F3"/>

        <TextView
                android:text="אביטן שלי"
                android:textSize="20dp"
                android:background="@drawable/back"
                android:textStyle="bold"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="112dp"
                android:layout_marginLeft="150dp"
                android:id="@+id/textView16"
                android:textColor="#E3F1F3"/>
        <ImageButton
                android:id="@+id/settings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="335dp"
                android:background="@drawable/settingsn"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
    >

        <Button
                android:text="Queue Reservation"
                android:textSize="10dp"
                android:background="@drawable/arround"
                android:textStyle="bold"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/QueueReservation"
                android:layout_marginLeft="40dp"

        />
        <Button
                android:text="Contact your doctor online"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:id="@+id/Contact"
                android:layout_gravity="center"
                android:background="@drawable/arround"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
    >
        <Button
                android:text="Medications and prescriptions"
                android:textStyle="bold"
                android:textSize="10dp"
                android:background="@drawable/arround"
                android:textColor="#442C2E"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:id="@+id/MedicationsAndPrescriptions"
                android:layout_marginLeft="40dp"
        />
        <Button
                android:text="Visit without a ticket"
                android:textStyle="bold"
                android:textSize="10dp"
                android:background="@drawable/arround"
                android:textColor="#442C2E"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/visit"
                android:layout_marginLeft="30dp"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
    >
        <Button
                android:text="Tests"
                android:textStyle="bold"
                android:textSize="10dp"
                android:background="@drawable/arround"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/Tests"
                android:layout_marginLeft="40dp"
        />
        <Button
                android:text="Detection of services and emergency medicine"
                android:textStyle="bold"
                android:textSize="10dp"
                android:background="@drawable/arround"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/services"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="55dp"
        />

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
    >
        <Button

                android:text="medical file"
                android:background="@drawable/arround"
                android:textStyle="bold"
                android:textSize="10dp"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/medicalFile"
                android:layout_marginLeft="40dp"/>

        <Button
                android:text="Commitments"
                android:background="@drawable/arround"
                android:textStyle="bold"
                android:textSize="10dp"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/Commitments"
                android:layout_marginLeft="30dp"/>

    </LinearLayout>


</LinearLayout>